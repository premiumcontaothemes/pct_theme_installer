
<div class="breadcrumb">
	<ul class="items">
	<?php foreach($this->items as $item): ?>
	<li class="<?= $item['class']; ?>">
		<?php if($item['isActive']): ?>
		<span><?= $item['label']; ?></span>
		<?php else: ?>
		<a href="<?= $item['href']; ?>" title="<?= $item['title']; ?>"><?= $item['label']; ?></a>
		<?php endif; ?>
	</li>
	<?php endforeach; ?>
	</ul>
</div>